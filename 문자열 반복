import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Main {
	
	public static void main(String[] args) throws IOException  {
		
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		int caseF = Integer.parseInt(br.readLine());
		
		for(int i = 0; i < caseF; i++) {
			
			//readLine은 String
			String[] caseS = br.readLine().split(" "); //공백 기준으로 분리해서 배열에 넣
			
			//두번째줄 테스트 수
			int num = Integer.parseInt(caseS[0]);
			//두번째줄 문자열
			String str = caseS[1];
			
			//num의 수만큼 str의 문자 개수 증감
			for(int j = 0; j < str.length(); j++) {
				for(int k = 0; k < num; k++) {
					System.out.print(str.charAt(j));
				}	
			}
			System.out.println();			
		}

	}
}
